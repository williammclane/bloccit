<h1>Edit Post </h1>

<div class = "row">
  <div class = "col-md-4">
    <h4> Guidelines </h4>
    <ul>
      <li> Obscene content will be removed.</li>
      <li> Posts inciting violence or harassment will be removed.</li>
      <li> Phishing and/or advertising will be marked as spam.</li>
    </ul>
    <div class = 'cold-md-8'>
      <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>
        <div class = "form-group">
          <%= f.label :title %>
          <%= f.text_field :title,
                class: 'form-control',
                placeholder: "Enter post title" %>
        </div>
        <div class = "form-group">
          <%= f.label :body %>
          <%= f.text_area :body,
                rows: 8,
                class: 'form-control',
                placeholder: "Enter content here" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control' %>
        </div>
        <div class = "form-group">
          <%= f.submit "Update", class: 'btn btn-success' %>
      <% end %>
    </div>
</div>